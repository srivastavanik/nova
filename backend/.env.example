# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Novita AI Configuration
NOVITA_API_KEY=your_novita_api_key
NOVITA_API_BASE_URL=https://api.novita.ai/v3

# OAuth Configuration
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_APP_SECRET=your_oauth_app_secret
OAUTH_AUTH_URL=https://novita.ai/oauth/authorize
OAUTH_TOKEN_EXCHANGE_URL=https://api-server.novita.ai/oauth/token
OAUTH_REDIRECT_URI=http://localhost:5000/api/external-auth/callback
OAUTH_SCOPE=openid+profile
OAUTH_USERINFO_URL=https://api-server.novita.ai/oauth/userinfo

# frontend Configuration
WEB_ORIGIN=http://localhost:3000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# JWT Configuration
JWT_ACCESS_SECRET=your_jwt_access_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
